---
export interface Props {
  title?: string;
  description?: string;
  className?: string;
  containerClassName?: string;
}

const { title, description, className = '', containerClassName = '' } = Astro.props;
---

<section class={`py-10 ${className}`}>
  <div class={`mx-auto max-w-6xl px-4 ${containerClassName}`}>
    {title && (
      <header class="mb-6">
        <h2 class="text-4xl font-semibold tracking-tight text-[var(--color-text-primary)]">
          {title}
        </h2>
        {description && (
          <p class="mt-1 text-sm text-[var(--color-text-secondary)]">{description}</p>
        )}
      </header>
    )}
    <slot />
  </div>
</section>